<UserControl
    x:Class="AbleSharp.GUI.Views.TimelineView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:AbleSharp.GUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AbleSharp.GUI"
    mc:Ignorable="d"
    d:DesignWidth="1200"
    d:DesignHeight="800"
    x:Name="TimelineViewRoot">

    <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*">
        <!-- Transport Bar -->
        <Grid Grid.Row="0"
              Height="40"
              Background="#272727"
              ColumnDefinitions="Auto,*,Auto">

            <!-- Left: Transport Controls -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        Margin="10,0"
                        Spacing="20">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="{Binding Tempo, StringFormat='{}{0:F1}'}"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center" />
                    <TextBlock Text="BPM"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="2">
                    <TextBlock Text="{Binding TimeSigNumerator}"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center" />
                    <TextBlock Text="/"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center" />
                    <TextBlock Text="{Binding TimeSigDenominator}"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>

            <!-- Right: Zoom Controls -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        Margin="10,0"
                        Spacing="10">

                <!-- X Zoom -->
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="X Zoom:" Foreground="#CCCCCC" VerticalAlignment="Center" />
                    <Button Command="{Binding ZoomOutXCommand}"
                            Classes="transport">
                        <TextBlock Text="-" />
                    </Button>

                    <Slider Width="100"
                            Minimum="{x:Static local:Constants.MIN_ZOOM_X}"
                            Maximum="{x:Static local:Constants.MAX_ZOOM_X}"
                            Value="{Binding ZoomX}"
                            VerticalAlignment="Center" />

                    <Button Command="{Binding ZoomInXCommand}"
                            Classes="transport">
                        <TextBlock Text="+" />
                    </Button>

                    <TextBlock Text="{Binding ZoomX, StringFormat='x{0:F1}'}"
                               Foreground="#CCCCCC"
                               Width="50"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />

                    <Button Command="{Binding FitHorizontalCommand}"
                            Classes="transport"
                            ToolTip.Tip="Fit to width">
                        <TextBlock Text="H" />
                    </Button>
                </StackPanel>

                <!-- Y Zoom -->
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="Y Zoom:" Foreground="#CCCCCC" VerticalAlignment="Center" />
                    <Button Command="{Binding ZoomOutYCommand}"
                            Classes="transport">
                        <TextBlock Text="-" />
                    </Button>

                    <Slider Width="100"
                            Minimum="{x:Static local:Constants.MIN_ZOOM_Y}"
                            Maximum="{x:Static local:Constants.MAX_ZOOM_Y}"
                            Value="{Binding ZoomY}"
                            VerticalAlignment="Center" />

                    <Button Command="{Binding ZoomInYCommand}"
                            Classes="transport">
                        <TextBlock Text="+" />
                    </Button>

                    <TextBlock Text="{Binding ZoomY, StringFormat='x{0:F1}'}"
                               Foreground="#CCCCCC"
                               Width="50"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />

                    <Button Command="{Binding FitVerticalCommand}"
                            Classes="transport"
                            ToolTip.Tip="Fit to height">
                        <TextBlock Text="V" />
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Timeline Ruler -->
        <views:TimeRulerView
            Grid.Row="1"
            Height="30"
            Width="{Binding TotalTimelineWidth}"
            Background="#1E1E1E"
            HorizontalAlignment="Left"
            x:Name="TimeRuler" />

        <!-- Main Content Area -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
            <!-- Scrollable Timeline -->
            <ScrollViewer Grid.Column="0"
                          Name="HorizontalScroller"
                          HorizontalScrollBarVisibility="Visible"
                          VerticalScrollBarVisibility="Visible">
                <Grid>
                    <!-- Track Lanes -->
                    <ItemsControl ItemsSource="{Binding Tracks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <views:TimelineTrackView DataContext="{Binding}"
                                                         Height="{Binding ZoomY, Converter={StaticResource HeightMultiConverter}, ConverterParameter=60}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>

            <!-- Fixed Track Headers -->
            <ScrollViewer Grid.Column="1"
                          Name="HeaderScroller"
                          Width="200"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Hidden">
                <ItemsControl ItemsSource="{Binding Tracks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <views:TimelineTrackHeaderView DataContext="{Binding}"
                                                           Height="{Binding ZoomY, Converter={StaticResource HeightMultiConverter}, ConverterParameter=60}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>

    <UserControl.Styles>
        <!-- Transport Button Style -->
        <Style Selector="Button.transport">
            <Setter Property="Width" Value="24" />
            <Setter Property="Height" Value="24" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Background" Value="#444444" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- Slider Style -->
        <Style Selector="Slider">
            <Setter Property="Foreground" Value="#666666" />
            <Setter Property="Background" Value="#333333" />
        </Style>
    </UserControl.Styles>
</UserControl>