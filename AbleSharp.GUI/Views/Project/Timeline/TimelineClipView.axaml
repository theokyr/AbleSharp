<UserControl
    x:Class="AbleSharp.GUI.Views.TimelineClipView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Canvas Name="RootCanvas">
        <Border Name="ClipBorder"
                Height="{Binding ZoomY, Converter={StaticResource HeightMultiConverter}, ConverterParameter=40}"
                Margin="0,5,0,5"
                CornerRadius="3"
                BoxShadow="0 1 3 0 #40000000"
                ToolTip.Tip="{Binding ClipName}">

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="{Binding LightColor}" />
                    <GradientStop Offset="1" Color="{Binding BaseColor}" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Clip Header -->
                <Border Grid.Row="0"
                        Background="{Binding DarkColor}"
                        Height="{Binding ZoomY, Converter={StaticResource HeightMultiConverter}, ConverterParameter=16}">
                    <Grid ColumnDefinitions="*,Auto">
                        <!-- Clip Name -->
                        <TextBlock Grid.Column="0"
                                   Text="{Binding ClipName}"
                                   Margin="5,2"
                                   FontSize="{Binding ZoomY, Converter={StaticResource FontSizeMultiConverter}, ConverterParameter=10}"
                                   Foreground="White"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center" />

                        <!-- Length Display -->
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Length, StringFormat='{}{0:F1}'}"
                                   Margin="5,2"
                                   FontSize="{Binding ZoomY, Converter={StaticResource FontSizeMultiConverter}, ConverterParameter=9}"
                                   Foreground="#AAFFFFFF"
                                   VerticalAlignment="Center" />
                    </Grid>
                </Border>

                <!-- Clip Content -->
                <Border Grid.Row="1"
                        Background="{Binding DarkColor}"
                        Margin="0,1,0,0">
                    <!-- Place for waveform/midi data visualization -->
                    <Grid>
                        <TextBlock Text="∿∿∿∿"
                                   Foreground="#fff"
                                   FontSize="{Binding ZoomY, Converter={StaticResource FontSizeMultiConverter}, ConverterParameter=14}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Canvas>
</UserControl>