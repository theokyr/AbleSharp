<?xml version="1.0" encoding="utf-8"?>

<UserControl
    x:Class="AbleSharp.GUI.Views.TimelineClipView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Canvas Name="RootCanvas">
        <Border Name="ClipBorder"
                Height="40"
                Margin="0,10,0,10"
                CornerRadius="3"
                BoxShadow="0 1 3 0 #40000000"
                ToolTip.Tip="{Binding ClipName}">

            <!-- Clip Background -->
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="#4A90E2" />
                    <GradientStop Offset="1" Color="#3A80D2" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid RowDefinitions="16,*">
                <!-- Clip Header -->
                <Border Grid.Row="0"
                        Background="#3A80D2">
                    <Grid ColumnDefinitions="*,Auto">
                        <!-- Clip Name -->
                        <TextBlock Grid.Column="0"
                                   Text="{Binding ClipName}"
                                   Margin="5,0"
                                   FontSize="10"
                                   Foreground="White"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center" />

                        <!-- Length Display -->
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Length, StringFormat='{}{0:F1}'}"
                                   Margin="5,0"
                                   FontSize="9"
                                   Foreground="#AAFFFFFF"
                                   VerticalAlignment="Center" />
                    </Grid>
                </Border>

                <!-- Clip Content -->
                <Border Grid.Row="1"
                        Margin="0,1,0,0">
                    <!-- Place for waveform/midi data visualization -->
                    <Grid>
                        <TextBlock Text="∿∿∿∿"
                                   Foreground="#FFFFFF66"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Canvas>
</UserControl>