<UserControl
    x:Class="AbleSharp.GUI.Views.TimelineTrackView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:AbleSharp.GUI.Views"
    Height="60"
    HorizontalAlignment="Left">

    <Grid RowDefinitions="*" ColumnDefinitions="*,Auto" Height="60">
        <Border Grid.Column="0" Background="#1E1E1E"
                BorderBrush="#333333"
                BorderThickness="0,0,0,1">

            <ItemsControl ItemsSource="{Binding ClipViewModels}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas
                            Width="{Binding DataContext.TotalTimelineWidth, 
                                          RelativeSource={RelativeSource AncestorType=views:TimelineView}}"
                            HorizontalAlignment="Left" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:TimelineClipView DataContext="{Binding}"
                                                ClipToBounds="False" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <Border Grid.Column="1"
                Background="#333333">
            <StackPanel Orientation="Vertical"
                        Margin="0,0,0,1">
                <TextBlock Text="{Binding TrackName}"
                           Foreground="#FFFFFF"
                           FontSize="12" />
                <TextBlock Text="{Binding Track.Id}"
                           Foreground="#BBBBBB"
                           FontSize="10" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>