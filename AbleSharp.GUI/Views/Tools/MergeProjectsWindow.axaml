<UserControl
    x:Class="AbleSharp.GUI.Views.Tools.MergeProjectsWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="600" d:DesignHeight="400">

    <Grid RowDefinitions="Auto,*,Auto,*,Auto" Margin="10">
        <!-- Title -->
        <TextBlock Text="Merge Projects"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10" />

        <!-- Project Selection Area -->
        <Border Grid.Row="1" Margin="0,0,0,10" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Projects to Merge" FontWeight="Bold" Margin="5" />
                <DockPanel Margin="5">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,5">
                        <Button Content="Add Projects" Command="{Binding AddProjectsCommand}" Margin="0,0,5,0" />
                        <Button Content="Remove Selected" Command="{Binding RemoveSelectedProjectsCommand}"
                                IsEnabled="{Binding SelectedProjects.Count, Converter={StaticResource GreaterThanConverter}, ConverterParameter=0}" />
                    </StackPanel>
                    <ListBox x:Name="ProjectsListBox" ItemsSource="{Binding SelectedProjects}" SelectionMode="Single" />
                </DockPanel>
            </StackPanel>
        </Border>

        <!-- Output File Selection -->
        <Border Grid.Row="3" Margin="0,0,0,10" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Output File" FontWeight="Bold" Margin="5" />
                <DockPanel Margin="5">
                    <TextBox Text="{Binding OutputFilePath}" IsReadOnly="True" DockPanel.Dock="Left" Width="400" />
                    <Button Content="Browse..." Command="{Binding SelectOutputFileCommand}" Margin="5,0,0,0" />
                </DockPanel>
            </StackPanel>
        </Border>

        <!-- Merge Settings -->
        <Border Grid.Row="5" Margin="0,0,0,10" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Merge Settings" FontWeight="Bold" Margin="5" />
                <StackPanel Margin="5">
                    <!-- Example Settings -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Resolve Conflicts:" VerticalAlignment="Center" Width="150" />
                        <ComboBox SelectedItem="{Binding MergeSettingExample}" Width="200">
                            <ComboBoxItem Content="Keep All" />
                            <ComboBoxItem Content="Overwrite Existing" />
                            <ComboBoxItem Content="Skip Duplicates" />
                        </ComboBox>
                    </StackPanel>
                    <!-- Add more settings as needed -->
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Merge Button -->
        <Button Content="Merge Projects" Command="{Binding MergeProjectsCommand}"
                Grid.Row="6" HorizontalAlignment="Right" Width="120" />
    </Grid>
</UserControl>