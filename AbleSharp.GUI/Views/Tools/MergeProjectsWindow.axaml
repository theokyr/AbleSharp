<Window
    x:Class="AbleSharp.GUI.Views.Tools.MergeProjectsWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Merge Projects"
    MinWidth="300" MinHeight="400"
    Width="700" Height="900"
    WindowStartupLocation="CenterOwner">

    <Grid RowDefinitions="*,Auto,Auto,Auto" Margin="8">
        <!-- Project Selection Area -->
        <Border Grid.Row="0"
                Classes="card"
                ClipToBounds="True">

            <Grid RowDefinitions="Auto,Auto,*">
                <TextBlock Grid.Row="0"
                           Text="Projects to Merge"
                           Classes="Heading3"
                           Margin="0,0,0,8" />

                <!-- Buttons -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Spacing="8"
                            Margin="0,0,0,16">
                    <Button Content="Add Projects"
                            Command="{Binding AddProjectsCommand}"
                            Classes="primary" />
                    <Button Content="Clear All"
                            Command="{Binding RemoveSelectedProjectsCommand}"
                            IsEnabled="{Binding SelectedProjects.Count, Converter={StaticResource GreaterThanConverter}, ConverterParameter=0}" />
                </StackPanel>

                <!-- Drop Zone and List -->
                <Border Name="FileDropZone"
                        Grid.Row="2"
                        DragDrop.AllowDrop="True"
                        Background="{Binding IsDragOver, Converter={StaticResource IsDragOverToBackgroundConverter}}"
                        BorderBrush="{Binding IsDragOver, Converter={StaticResource IsDragOverToBorderBrushConverter}}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Margin="0,4"
                        Classes.dragover="{Binding IsDragOver}">
                    <!-- List of Selected Projects -->
                    <Grid>
                        <ListBox ItemsSource="{Binding SelectedProjects}"
                                 SelectionMode="Multiple"
                                 Background="Transparent"
                                 IsVisible="{Binding HasFiles}"
                                 Margin="4">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Text="{Binding}"
                                                   TextWrapping="Wrap"
                                                   ToolTip.Tip="{Binding}" />
                                        <Button Grid.Column="1"
                                                Command="{Binding DataContext.RemoveProjectCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Classes="icon"
                                                ToolTip.Tip="Remove">
                                            <TextBlock Text="✕"
                                                       FontSize="14" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Empty State / Drop Zone Message -->
                        <Grid IsVisible="{Binding !HasFiles}"
                              RowDefinitions="Auto,Auto"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="16">
                            <TextBlock Grid.Row="0"
                                       Text="⬇"
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       Margin="0,0,0,0" />
                            <StackPanel Grid.Row="1" Spacing="4">
                                <TextBlock Text="Drag and drop .als files here"
                                           Classes="Body"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="or use the Add Projects button above"
                                           Classes="Caption"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Output File Selection -->
        <Border Grid.Row="1" Classes="card" Margin="0,16">
            <Grid RowDefinitions="Auto,Auto">
                <TextBlock Text="Output"
                           Classes="Heading3"
                           Margin="0,0,0,8" />

                <Grid Grid.Row="1" RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" Margin="0,8">
                    <!-- Target Version -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Target Version:"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />
                    <ComboBox Grid.Row="0" Grid.Column="1"
                              ItemsSource="{Binding AvailableVersions}"
                              SelectedItem="{Binding TargetVersion}"
                              MinWidth="120" />

                    <!-- Output File -->
                    <TextBox Grid.Row="1" Grid.Column="0"
                             Text="{Binding OutputFilePath}"
                             IsReadOnly="True"
                             Margin="0,8,8,0" />

                    <Button Grid.Row="1" Grid.Column="1"
                            Content="Browse..."
                            Command="{Binding SelectOutputFileCommand}"
                            Margin="0,8,0,0" />
                </Grid>
            </Grid>
        </Border>

        <!-- Merge Settings & Status -->
        <Border Grid.Row="2" Classes="card">
            <Grid RowDefinitions="Auto,Auto">
                <!-- Settings -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Merge Settings"
                               Classes="Heading3"
                               Margin="0,0,0,8" />

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
                        <!-- Conflict Resolution -->
                        <TextBlock Text="Resolve Conflicts:"
                                   Classes="Body"
                                   VerticalAlignment="Center"
                                   Grid.Row="0" Grid.Column="0"
                                   Margin="0,0,16,0" />

                        <ComboBox SelectedItem="{Binding NamingConflictResolution}"
                                  Grid.Row="0" Grid.Column="1"
                                  Width="200"
                                  HorizontalAlignment="Left">
                            <ComboBoxItem Content="Rename" />
                            <ComboBoxItem Content="Skip" />
                            <ComboBoxItem Content="Cancel" />
                        </ComboBox>

                        <!-- Preserve Colors -->
                        <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                  IsChecked="{Binding PreserveColors}"
                                  Content="Preserve Track Colors"
                                  Margin="0,8" />

                        <!-- Preserve Scenes -->
                        <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                  IsChecked="{Binding PreserveScenes}"
                                  Content="Merge Scenes from All Projects"
                                  Margin="0,8" />
                    </Grid>
                </StackPanel>

                <!-- Progress & Status -->
                <StackPanel Grid.Row="1"
                            Margin="0,16,0,16"
                            IsVisible="{Binding ShowStatusMessage}">
                    <Grid ColumnDefinitions="*,Auto">
                        <ProgressBar Value="{Binding MergeProgress}"
                                     IsIndeterminate="{Binding IsMergeProgressIndeterminate}"
                                     Height="4"
                                     Margin="0,0,8,4"
                                     IsVisible="{Binding IsMerging}" />
                        <TextBlock Text="{Binding MergeProgress, StringFormat='{}{0:0}%'}"
                                   Grid.Column="1"
                                   Classes="Caption"
                                   IsVisible="{Binding IsMerging}" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Text="{Binding StatusMessage}"
                                   Classes="Caption"
                                   Foreground="{Binding StatusMessageColor}"
                                   TextWrapping="Wrap" />
                        <Button Grid.Column="1"
                                Command="{Binding ClearStatusCommand}"
                                Classes="icon"
                                Margin="8,0,0,0"
                                ToolTip.Tip="Clear message">
                            <TextBlock Text="✕" FontSize="12" />
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
        
        <Border Grid.Row="3">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <Button Grid.Column="0"
                        Content="Reset"
                        Command="{Binding ClearInputsCommand}"
                        HorizontalAlignment="Right"
                        Width="120">
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource AllTrueMultiConverter}">
                            <Binding Path="IsMerging"
                                     Converter="{StaticResource InvertBoolConverter}" />
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>

                <Button Grid.Column="2"
                        Content="Merge Projects"
                        Command="{Binding MergeProjectsCommand}"
                        Classes="primary"
                        HorizontalAlignment="Right"
                        Width="120">
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource AllTrueMultiConverter}">
                            <Binding Path="SelectedProjects.Count"
                                     Converter="{StaticResource GreaterThanConverter}"
                                     ConverterParameter="1" />
                            <Binding Path="OutputFilePath"
                                     Converter="{StaticResource IsNotEmptyConverter}" />
                            <Binding Path="IsMerging"
                                     Converter="{StaticResource InvertBoolConverter}" />
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
            </Grid>
        </Border>
    </Grid>

    <Window.Styles>
        <Style Selector="Border.dragover">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="Background" Value="{DynamicResource BackgroundAltBrush}" />
            <Setter Property="Opacity" Value="0.9" />
        </Style>

        <Style Selector="Button.icon">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Styles>
</Window>