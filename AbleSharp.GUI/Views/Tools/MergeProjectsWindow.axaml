<Window
    x:Class="AbleSharp.GUI.Views.Tools.MergeProjectsWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Merge Projects"
    Width="600" Height="800"
    WindowStartupLocation="CenterOwner"
    DragDrop.AllowDrop="True">

    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="16">
        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Merge Projects"
                   Classes="Heading1"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,24" />

        <!-- Project Selection Area -->
        <Border Grid.Row="1"
                Classes="card"
                ClipToBounds="True">
            <Grid RowDefinitions="Auto,Auto,*">
                <TextBlock Grid.Row="0"
                           Text="Projects to Merge"
                           Classes="Heading3"
                           Margin="0,0,0,8" />

                <!-- Buttons -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Spacing="8"
                            Margin="0,0,0,16">
                    <Button Content="Add Projects"
                            Command="{Binding AddProjectsCommand}"
                            Classes="primary" />
                    <Button Content="Remove Selected"
                            Command="{Binding RemoveSelectedProjectsCommand}"
                            IsEnabled="{Binding SelectedProjects.Count, Converter={StaticResource GreaterThanConverter}, ConverterParameter=0}" />
                </StackPanel>

                <!-- Drop Zone and List -->
                <Grid Grid.Row="2" RowDefinitions="*">
                    <!-- List of Selected Projects -->
                    <ListBox x:Name="ProjectsListBox"
                             ItemsSource="{Binding SelectedProjects}"
                             SelectionMode="Single"
                             Background="Transparent"
                             IsVisible="{Binding SelectedProjects.Count, Converter={StaticResource GreaterThanConverter}, ConverterParameter=0}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           TextWrapping="Wrap"
                                           ToolTip.Tip="{Binding}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Drop Zone Overlay -->
                    <Border Name="DropZone"
                            Background="{Binding IsDragOver, Converter={StaticResource IsDragOverToBackgroundConverter}}"
                            BorderBrush="{Binding IsDragOver, Converter={StaticResource IsDragOverToBorderBrushConverter}}"
                            CornerRadius="8"
                            Padding="32"
                            IsVisible="{Binding SelectedProjects.Count, Converter={StaticResource GreaterThanConverter}, ConverterParameter=0, Converter={StaticResource InvertBoolConverter}}"
                            Opacity="{Binding IsDragOver, Converter={StaticResource BoolToOpacityConverter}}">
                        <Grid>
                            <!-- Dashed border rectangle -->
                            <Rectangle Stroke="{Binding IsDragOver, Converter={StaticResource IsDragOverToBorderBrushConverter}}"
                                       StrokeThickness="2"
                                       StrokeDashArray="4,4"
                                       Margin="1"
                                       Fill="Transparent" />

                            <!-- Drop zone content -->
                            <Grid RowDefinitions="Auto,Auto"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                                <TextBlock Grid.Row="0"
                                           Text="⬇"
                                           FontSize="48"
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           Margin="0,0,0,16" />
                                <StackPanel Grid.Row="1" Spacing="8">
                                    <TextBlock Text="Drag and drop .als files here"
                                               Classes="Body"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center" />
                                    <TextBlock Text="or use the Add Projects button above"
                                               Classes="Caption"
                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                               HorizontalAlignment="Center" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Output File Selection -->
        <Border Grid.Row="2" Classes="card" Margin="0,16">
            <StackPanel>
                <TextBlock Text="Output File"
                           Classes="Heading3"
                           Margin="0,0,0,8" />

                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                    <TextBox Text="{Binding OutputFilePath}"
                             IsReadOnly="True"
                             Grid.Column="0"
                             Margin="0,0,8,0" />

                    <Button Content="Browse..."
                            Command="{Binding SelectOutputFileCommand}"
                            Grid.Column="1" />
                </Grid>
            </StackPanel>
        </Border>

        <!-- Merge Settings & Status -->
        <Border Grid.Row="3" Classes="card">
            <Grid RowDefinitions="Auto,Auto,Auto">
                <!-- Settings -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Merge Settings"
                               Classes="Heading3"
                               Margin="0,0,0,8" />

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto">
                        <TextBlock Text="Resolve Conflicts:"
                                   Classes="Body"
                                   VerticalAlignment="Center"
                                   Grid.Column="0"
                                   Margin="0,0,16,0" />

                        <ComboBox SelectedItem="{Binding MergeSettingExample}"
                                  Grid.Column="1"
                                  Width="200"
                                  HorizontalAlignment="Left">
                            <ComboBoxItem Content="Keep All" />
                            <ComboBoxItem Content="Overwrite Existing" />
                            <ComboBoxItem Content="Skip Duplicates" />
                        </ComboBox>
                    </Grid>
                </StackPanel>

                <!-- Progress & Status -->
                <StackPanel Grid.Row="1"
                            Margin="0,16,0,16"
                            IsVisible="{Binding IsMerging}">
                    <Grid ColumnDefinitions="*,Auto">
                        <ProgressBar Value="{Binding MergeProgress}"
                                     IsIndeterminate="{Binding IsMergeProgressIndeterminate}"
                                     Height="4"
                                     Margin="0,0,8,4" />
                        <TextBlock Text="{Binding MergeProgressText}"
                                   Grid.Column="1"
                                   Classes="Caption" />
                    </Grid>
                    <TextBlock Text="{Binding StatusMessage}"
                               Classes="Caption"
                               Foreground="{Binding StatusMessageColor}"
                               TextWrapping="Wrap" />
                </StackPanel>

                <!-- Merge Button -->
                <Button Grid.Row="2"
                        Content="Merge Projects"
                        Command="{Binding MergeProjectsCommand}"
                        Classes="primary"
                        HorizontalAlignment="Right"
                        Width="120">
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource AllTrueMultiConverter}">
                            <Binding Path="SelectedProjects.Count" Converter="{StaticResource GreaterThanConverter}" ConverterParameter="1" />
                            <Binding Path="OutputFilePath" Converter="{StaticResource IsNotEmptyConverter}" />
                            <Binding Path="IsMerging" Converter="{StaticResource InvertBoolConverter}" />
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>