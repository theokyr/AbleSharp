<?xml version="1.0" encoding="utf-8"?>

<UserControl
    x:Class="AbleSharp.GUI.Views.TimelineView"
    x:Name="TimelineViewRoot"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:AbleSharp.GUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="900"
    d:DesignHeight="600">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- ========== Row 0: Transport & Zoom controls ========== -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Background="#222222">
            <!-- Left side: BPM & Time Sig -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10" Margin="10,0">
                <TextBlock Text="{Binding Tempo, StringFormat='{}{0:F1} BPM'}"
                           VerticalAlignment="Center"
                           Foreground="#CCCCCC" />

                <TextBlock Text="{Binding TimeSigNumerator}" Margin="10,0,2,0"
                           VerticalAlignment="Center" Foreground="#CCCCCC" />
                <TextBlock Text="/" VerticalAlignment="Center" Foreground="#CCCCCC" />
                <TextBlock Text="{Binding TimeSigDenominator}"
                           VerticalAlignment="Center" Foreground="#CCCCCC" />
            </StackPanel>

            <!-- Right side: Zoom controls -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10" Margin="10,0">
                <Button Command="{Binding ZoomOutCommand}" Classes="transport">
                    <TextBlock Text="-" />
                </Button>

                <TextBlock Text="{Binding Zoom, StringFormat='x{0:F1}'}"
                           VerticalAlignment="Center"
                           Width="50"
                           TextAlignment="Center"
                           Foreground="#CCCCCC" />

                <Button Command="{Binding ZoomInCommand}" Classes="transport">
                    <TextBlock Text="+" />
                </Button>
            </StackPanel>
        </Grid>

        <!-- ========== Row 1: The pinned TimeRuler (30px tall) ========== -->
        <views:TimeRulerView
            Grid.Row="1"
            Height="30"
            Width="{Binding TotalTimelineWidth}"
            Background="#333333"
            x:Name="TimeRuler" />

        <!-- 
          ========== Row 2: SCROLLABLE region for:
             - A horizontal scroller (clips) in col=0
             - Pinned track headers in col=1
          Both in the same vertical scrolling region, so
          when the user scrolls down, they remain aligned.
        ========== -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Visible"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="#1A1A1A"
                      x:Name="OuterVerticalScroller">
            <Grid ColumnDefinitions="*">
                <ScrollViewer Grid.Column="0"
                              HorizontalScrollBarVisibility="Visible"
                              VerticalScrollBarVisibility="Disabled"
                              Background="#1A1A1A"
                              x:Name="HorizontalScroller">
                    <ItemsControl ItemsSource="{Binding Tracks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <views:TimelineTrackView DataContext="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </ScrollViewer>
    </Grid>

    <!-- Style for zoom/transport buttons -->
    <UserControl.Styles>
        <Style Selector="Button.transport">
            <Setter Property="Width" Value="24" />
            <Setter Property="Height" Value="24" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Background" Value="#444444" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </UserControl.Styles>
</UserControl>