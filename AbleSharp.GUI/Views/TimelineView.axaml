<?xml version="1.0" encoding="utf-8"?>

<UserControl
    x:Class="AbleSharp.GUI.Views.TimelineView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:AbleSharp.GUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="1200"
    d:DesignHeight="800"
    x:Name="TimelineViewRoot">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Transport Bar -->
        <Grid Grid.Row="0"
              Height="40"
              Background="#272727"
              ColumnDefinitions="Auto,*,Auto">

            <!-- Left: Transport Controls -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        Margin="10,0"
                        Spacing="20">

                <!-- Tempo -->
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="{Binding Tempo, StringFormat='{}{0:F1}'}"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center" />
                    <TextBlock Text="BPM"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center" />
                </StackPanel>

                <!-- Time Signature -->
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <TextBlock Text="{Binding TimeSigNumerator}"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center" />
                    <TextBlock Text="/"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center" />
                    <TextBlock Text="{Binding TimeSigDenominator}"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>

            <!-- Right: Zoom Controls -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        Margin="10,0"
                        Spacing="10">

                <Button Command="{Binding ZoomOutCommand}"
                        Classes="transport">
                    <TextBlock Text="-" />
                </Button>

                <TextBlock Text="{Binding Zoom, StringFormat='x{0:F1}'}"
                           Foreground="#CCCCCC"
                           Width="50"
                           TextAlignment="Center"
                           VerticalAlignment="Center" />

                <Button Command="{Binding ZoomInCommand}"
                        Classes="transport">
                    <TextBlock Text="+" />
                </Button>
            </StackPanel>
        </Grid>

        <!-- Timeline Ruler -->
        <views:TimeRulerView
            Grid.Row="1"
            Height="30"
            Width="{Binding TotalTimelineWidth}"
            Background="#1E1E1E"
            x:Name="TimeRuler" />

        <!-- Main Content Area -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
            <!-- Scrollable Timeline -->
            <ScrollViewer Grid.Column="0"
                          Name="HorizontalScroller"
                          HorizontalScrollBarVisibility="Visible"
                          VerticalScrollBarVisibility="Visible">
                <Grid>
                    <!-- Background Grid -->
                    <views:GridLinesView x:Name="GridLines"
                                         Width="{Binding TotalTimelineWidth}" />

                    <!-- Track Lanes -->
                    <ItemsControl ItemsSource="{Binding Tracks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <views:TimelineTrackView DataContext="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>

            <!-- Fixed Track Headers -->
            <ScrollViewer Grid.Column="1"
                          Name="HeaderScroller"
                          Width="200"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Hidden">
                <ItemsControl ItemsSource="{Binding Tracks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <views:TrackHeaderView DataContext="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>

    <UserControl.Styles>
        <!-- Transport Button Style -->
        <Style Selector="Button.transport">
            <Setter Property="Width" Value="24" />
            <Setter Property="Height" Value="24" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Background" Value="#444444" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </UserControl.Styles>
</UserControl>