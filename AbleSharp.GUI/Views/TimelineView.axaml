<UserControl
    x:Class="AbleSharp.GUI.Views.TimelineView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:AbleSharp.GUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Row 0: Transport controls -->
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0" Spacing="10">
            <TextBlock Text="Tempo:" VerticalAlignment="Center" />
            <TextBlock Text="{Binding Tempo}" VerticalAlignment="Center" FontWeight="Bold" />
            <TextBlock Text="TimeSig:" VerticalAlignment="Center" Margin="15,0,0,0" />
            <TextBlock Text="{Binding TimeSigNumerator}" VerticalAlignment="Center" FontWeight="Bold" />
            <TextBlock Text="/" VerticalAlignment="Center" />
            <TextBlock Text="{Binding TimeSigDenominator}" VerticalAlignment="Center" FontWeight="Bold" />

            <Button Content="Zoom In" Margin="20,0,0,0" Command="{Binding ZoomInCommand}" />
            <Button Content="Zoom Out" Command="{Binding ZoomOutCommand}" />
            <TextBlock Text="{Binding Zoom, StringFormat='Zoom: {0:F2}'}"
                       VerticalAlignment="Center" Margin="10,0,0,0" />
        </StackPanel>

        <!-- Row 1: Time Ruler -->
        <views:TimeRulerView Grid.Row="1" Name="TimeRuler" Height="30" />

        <!-- Row 2: Scrollable track lanes -->
        <ScrollViewer Grid.Row="2"
                      HorizontalScrollBarVisibility="Visible"
                      VerticalScrollBarVisibility="Visible"
                      Name="TimelineScroller">

            <Grid ColumnDefinitions="Auto,*">
                <!-- Track headers column -->
                <StackPanel Grid.Column="0" Width="150" Background="#222222">
                    <ItemsControl ItemsSource="{Binding Tracks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Height="60" Padding="5" Background="#333333">
                                    <TextBlock Text="{Binding TrackName}"
                                               Foreground="White"
                                               VerticalAlignment="Center" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Clips area -->
                <ItemsControl Grid.Column="1"
                              ItemsSource="{Binding Tracks}"
                              Background="#1A1A1A">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <views:TimelineTrackView DataContext="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>