<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AbleSharp.GUI.Views.ProjectView"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AbleSharp.GUI.ViewModels"
             mc:Ignorable="d">

    <Grid RowDefinitions="Auto, *" Margin="10">
        <TextBlock Text="Project Tracks"
                   FontSize="16"
                   FontWeight="Bold"
                   Grid.Row="0"
                   Margin="0,0,0,10" />

        <TreeView Grid.Row="1"
                  ItemsSource="{Binding RootTracks}">
            <TreeView.ItemTemplate>
                <TreeDataTemplate
                    DataType="vm:TrackViewModel"
                    ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <!-- Display each TrackViewModelâ€™s name -->
                        <TextBlock Text="{Binding TrackName}" FontSize="14" />
                    </StackPanel>
                </TreeDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</UserControl>